# Application
APP_NAME=FakeAppDetection
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-this
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fakeapp_db
DB_ECHO=False

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Google Play Store API (if available)
GOOGLE_PLAY_API_KEY=
GOOGLE_PLAY_PROJECT_ID=

# Apple App Store API (if available)
APPLE_APP_STORE_KEY_ID=
APPLE_APP_STORE_ISSUER_ID=
APPLE_APP_STORE_PRIVATE_KEY=

# ML Models
MODEL_PATH=./ml_models/weights
ICON_SIMILARITY_THRESHOLD=0.85
TEXT_SIMILARITY_THRESHOLD=0.80
CERTIFICATE_STRICT_MODE=True

# Detection Settings
MIN_CONFIDENCE_SCORE=0.90
HIGH_RISK_THRESHOLD=0.85
MEDIUM_RISK_THRESHOLD=0.70

# Scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
MAX_CONCURRENT_REQUESTS=10
REQUEST_DELAY=2
PROXY_ENABLED=False
PROXY_LIST=

# APK Analysis
APK_DOWNLOAD_DIR=./data/apks
APK_MAX_SIZE_MB=100
ANALYZE_SDK_GRAPH=True

# Evidence Generation
EVIDENCE_OUTPUT_DIR=./evidence_kits
PDF_TEMPLATE_DIR=./templates/pdf
LOGO_WATERMARK=./assets/logo.png

# Email Notifications (for takedown alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Store Reporting APIs
GOOGLE_PLAY_REPORT_URL=https://support.google.com/googleplay/android-developer/contact/takedown
APPLE_REPORT_URL=https://reportaproblem.apple.com

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000"]

# AWS (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Analytics
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=90
